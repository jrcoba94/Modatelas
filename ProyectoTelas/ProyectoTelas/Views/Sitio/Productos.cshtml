@model IEnumerable<Servicios.Model.Producto>
@{
    Layout = "~/Views/Shared/_Principal.cshtml";
}
<div class="products">
    <div class="container">
        <h3><span>Productos</span></h3>
        <div class="products-top">
            @foreach(var item in Model){
                <div id="" class="col-md-3 prod">
                    <image src="@item.ImagenPortada" width="300"></image>
                </div>
            }
            <div class="clearfix"> </div>
        </div>
    </div>
</div>

