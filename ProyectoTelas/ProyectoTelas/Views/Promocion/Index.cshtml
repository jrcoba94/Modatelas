@model  IEnumerable<Servicios.Model.Promocion>
@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h2>Promoción</h2>
</div>

<div class="content-wrapper">
    <div class="container-fluid">

        <p>
            <button type="button" class="btn btn-default">
                @Html.ActionLink("Nuevo", "CreatePromotion")
            </button>
        </p>

        <!-- Tabla de Registros-->
        <br /><br /><br />
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Promociones
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Precio de Promoción</th>
                                <th>Fecha de Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Imagen</th>
                                <th>Producto</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
            {
                            <tbody>

                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.PromocionID)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PrecioPromocion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FechaInicio)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FechaFin)</td>
                                    <td><img src="@item.Imagen" height="80" width="80" /></td>
                                    <td>@Html.DisplayFor(modelItem => item.Producto.Nombre)</td>
                                    <td>
                                        @Html.ActionLink("Editar", "EditPromotion", new { id = item.PromocionID })
                                        @Html.ActionLink("Eliminar", "DeletePromotion", new { id = item.PromocionID })
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





