@model Servicios.Model.Producto

@{ 
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProductoID)
        <div class="col-md-4">
            <div class="form-group">
                <div class="col-md-12">
                    <strong>Nombre</strong>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-12">
                    <strong>Descripción</strong>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <strong>Características</strong>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Caracteristicas, new { htmlAttributes = new { @class = "form-control", @maxlength = "150", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Caracteristicas, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <strong>Imagen</strong>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="col-md-12">
                    <strong>Categoría</strong>
                </div>
                <div class="col-md-10">
                    @Html.DropDownList("CategoriaID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoriaID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div id="divInputLoad" class="col-md-10">
                    <div id="divFileUpload">
                        <input id="file-upload" type="file" name="files" accept="image/*" />
                    </div>
                    <div id="file-preview-zone">
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8" style="padding-left:20px">
                <input type="submit" value="Guardar" class="btn btn-pinterest" />
            </div>
        </div>
        <div>
            @Html.ActionLink("Back", "Index")
        </div>
    </div>
}
