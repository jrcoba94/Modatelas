@using PagedList;
@using PagedList.Mvc;

@model  IPagedList<Servicios.Model.Producto>

<h1 class="text-center">Productos</h1>

<p>
    <button type="button" class="btn btn-default">
        @Html.ActionLink("Nuevo", "CreateProduct")
    </button>
</p>

<div class="content-wrapper">
    <div class="container-fluid">

        <!-- Tabla de Registros-->
        <br /><br /><br />
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Registros
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Características</th>
                                <th>Imagen</th>
                                <th>Categoría</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        @*<tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Características</th>
                                <th>Imagen</th>
                                <th>Categoría</th>
                            </tr>
                        </tfoot>*@
                        @foreach (var item in Model)
                        {
                            <tbody>

                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ProductoID)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Caracteristicas)</td>
                                    <td><img src="@item.ImagenPortada" height="80" width="80" /></td>
                                    <td>@Html.DisplayFor(modelItem => item.Categoria.Nombre)</td>
                                    <td>
                                        @Html.ActionLink("Editar", "UpdateProduct", new { id = item.ProductoID })
                                        @*@Html.ActionLink("Details", "DetailsProduc", new { id = item.ProductoID }) |*@
                                        @Html.ActionLink("Eliminar", "DeleteProduct", new { id = item.ProductoID })
                                    </td>
                                </tr>                               
                            </tbody>
                        }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
